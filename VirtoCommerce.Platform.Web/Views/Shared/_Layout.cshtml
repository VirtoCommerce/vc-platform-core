<!DOCTYPE html>
<html lang="en" ng-app="platformWebApp" ng-strict-di>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Virto Commerce @ViewData["Title"]</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />

    <!-- Application insight snippet https://github.com/Microsoft/ApplicationInsights-aspnetcore/wiki/Getting-Started-with-Application-Insights-for-ASP.NET-Core-->
    @*@Html.Raw(snippet.FullScript)*@

    @if (@ViewData["GoogleContainerId"] != null)
    {
        <!-- Google Tag Manager -->
        <script>
(function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
'https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
})(window, document, 'script', 'dataLayer', '@ViewData["GoogleContainerId"]');
        </script>
        <!-- End Google Tag Manager -->
    }


    <environment include="Development">
        <link rel="stylesheet" href="~/css/allPackages.css" />
        <link rel="stylesheet" href="~/css/platform.css" />
        <link rel="stylesheet" href="vc-modules-styles" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/css/allPackages.min.css" asp-append-version="true" />
        <link rel="stylesheet" href="vc-modules-styles" />
    </environment>

    <meta name="viewport" content="width=device-width" />
    <base href="~/" />

    @Html.Partial("_FacebookTrackerPartial")

</head>
@*DO NOT CHANGE THE CODE BELOW: COPYRIGHT VIOLATION*@
<body ng-class="{'has-demo-warning' : demoResetTime || !license || license.hasExpired, 'lang-rtl': isRTL}" ng-controller="platformWebApp.appCtrl" ng-init="platformVersion ='@(Model.PlatformVersion)'; demoCredentials = '@(Model.DemoCredentials)'; demoResetTime = '@(Model.DemoResetTime)'; license = initExpiration(@Html.Encode(Model.License));">
    @if (@ViewData["GoogleContainerId"] != null)
    {
        <!-- Google Tag Manager (noscript) -->
        <noscript>
            <iframe src="@("https://www.googletagmanager.com/ns.html?id=" + @ViewData["GoogleContainerId"])"
                    height="0" width="0" style="display:none;visibility:hidden"></iframe>
        </noscript>
        <!-- End Google Tag Manager (noscript) -->
    }
    @RenderBody()

    <environment include="Development">
        <script src="~/js/allpackages.js" asp-append-version="true"></script>
        <script src="~/js/platform.js" asp-append-version="true"></script>
        @*<script asp-src-include="~/js/**/*" asp-append-version="true"></script>*@
        <script src="vc-modules-scripts" type="text/javascript" debug="true"></script>
    </environment>

    @RenderSection("scripts", required: false)
</body>
</html>
